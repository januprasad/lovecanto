<resources>

    <!-- Base application theme. -->
    <style name="Indigo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Indigo -->
    <color name="primary">#F64D64</color>
    <color name="primary_dark">#ffe7495f</color>
    <color name="accent">#ffd34862</color>
    <color name="text_primary">#D9FFFFFF</color>
    <color name="text_secondary">#D9000000</color>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Indigo without actionbar when toolbar is used -->
    <style name="IndigoWithoutActionBar" parent="Indigo">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
   </style>
    <style name="theme1" parent="AppTheme">
        <item name="android:colorPrimary">@color/color_set_1_primary</item>
        <item name="android:colorControlActivated">@color/color_set_1_accent</item>
        <item name="android:colorAccent">@color/color_set_1_accent</item>
    </style>

    <!-- Reveal transition colors -->
    <color name="color_set_1_primary">#4fc3f7</color>
    <color name="color_set_1_accent">#009688</color>

    <color name="color_set_2_primary">#42bd41</color>
    <color name="color_set_2_accent">#673AB7</color>

    <color name="color_set_3_primary">#ffb74d</color>
    <color name="color_set_3_accent">#E91E63</color>

    <color name="color_set_4_primary">#ff8a65</color>
    <color name="color_set_4_accent">#d500f9</color>
    <color name="photo_tint">#88101010</color>
    <color name="textcolour">#88000000</color>

</resources>
